/* pages/discover/index.wxss */
.bg_color {
  height: 100vh;
  background-color:#f2f3f5;
  padding-top: 8px;
}
.input_wrapper {
  display: block;
  width: 500rpx;
  height: 32px;
  margin:16px auto;
}
.input_wrapper input {
  height: 32px;
  line-height: 32px;
  background-color: #fff;
  border-radius: 16px;
  padding: 0 32rpx;
}
.main_container {
  border-top: 1rpx solid #ddd;
}
.about_page{
  margin: 0 10px;
}
.swiper-tab{
    width: 100%;
    /* border-bottom: 2rpx solid #ccc; */
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    color: #ccc;
    font-size: 16px;
}
.swiper-tab-item{
    width: 30%; 
    color:#333;
}
.active{
    color:#00C5CD;
    /* border-bottom: 4rpx solid #F65959; */
    font-size: 16px;
    font-weight: bold;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 10px;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.center_wrapper {
  border-top: 1rpx solid #ddd;
  padding: 8rpx 16rpx;
}
.song_item {
  display: flex;
  justify-content: left;
  margin: 16px 0px;
}
.song_item .item {
  width: 200rpx;
}
.song_item .item .icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  border-radius: 100%;
  background-color:#fff;
  cursor: pointer;
  margin-bottom:8rpx;
}
.song_item .item .icon>image {
  width: 100%;
  height: 100%;
}
